@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Identity;
@model PeripheralShop.Models.Orders;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Orders";
}
@if (SignInManager.IsSignedIn(User))
{
    if (Model.getOrders().Count == 0)
    {
        <h2>You haven't made any orders with this account !</h2>
    }
    else
    {
        <div class="card border-primary mb-3">
            <div class="card-header">
                My Orders
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var desc in Model.getOrders())
                {
                    <li class="list-group-item">@desc</li>
                }
            </ul>
        </div>

    }


}
else
{
    <h1>You are not signed in you shouldn't be here</h1>
}
